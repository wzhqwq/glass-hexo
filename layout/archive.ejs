<div id="inner-nav" class="nav-links"></div>
<% for (let post of page.posts.data) { %>
  <div class="post-block" title="一篇文章">
  <div background="<%= post.image %>" class="<% if (post.image) { %>post-image<% } else { %>post-default<% } %>"></div>
    <div class="post-text">
      <div class="post-title" title="文章标题为：<%= post.title %>"><a href="<%= url_for(post.path) %>"><%= post.title %></a></div>
      <div class="post-brief"><%= post.excerpt %></div>
      <div class="post-time">
        <div class="post-time-block" title="文章于<%= post.date.format(`${config.date_format}`) %>发布"><%= post.date.format(`${config.date_format}`) %></div>
      </div>
    </div>
  </div>
<% } %>